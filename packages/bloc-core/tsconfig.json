{
    "compilerOptions": {
      "target": "ES2018",
      "module": "ESNext",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "noEmit": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "paths": {
        "@core": ["./src"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }
  