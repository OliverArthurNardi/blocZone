root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2

[*.{js,css,scss}]
charset = utf-8

[*.{js,ts,jsx,tsx,css,scss}]
indent_style = space
indent_size = 2

[html]
indent_size = 4

[*.{yml,yaml}]
indent_style = space

[*.md]
trim_trailing_whitespace = false
