{
  "name": "bloczone",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "core:build": "pnpm --filter @bloczone/core build",
    "core:ci-test": "pnpm --filter @bloczone/core ci:test",
    "core:test": "pnpm --filter @bloczone/core test",
    "core:coverage": "pnpm --filter @bloczone/core test:cov",
    "core:lint": "pnpm --filter @bloczone/core lint",
    "core:format": "pnpm --filter @bloczone/core format",
		"playground:dev": "pnpm --filter @bloczone/playground dev",
		"playground:build": "pnpm --filter @bloczone/playground build"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "1.3.2",
    "@tsconfig/node18": "18.2.0",
    "@types/jsdom": "21.1.1",
    "@types/node": "20.4.2",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "eslint": "8.44.0",
    "prettier": "3.0.0",
    "typescript": "5.1.6"
  }
}
