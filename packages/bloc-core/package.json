{
  "name": "@bloczone/core",
  "version": "1.0.0",
  "description": "Core library for managing state using the BLoC pattern",
	"type": "module",
  "main": "dist/index.umd.js",
	"module": "dist/index.es.js",
  "types": "dist/types.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.es.js",
			"require": "./dist/index.umd.js"
		}
	},
  "scripts": {
    "build": "tsc --build tsconfig.json && jest && vite build",
    "test": "jest --watch",
		"test:cov": "jest --coverage --watch",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path ../../.gitignore",
		"format": "prettier --write src/"
  },
  "files": [
    "dist",
		"README.md",
		"package.json",
		"LICENSE"
  ],
  "keywords": [
    "bloc",
    "state management",
    "reactive",
    "library"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "29.6.1",
    "@types/jest": "29.5.3",
		"ts-node": "10.9.1",
    "jest": "29.6.1",
    "ts-jest": "29.1.1",
    "vite": "4.4.3",
    "vite-plugin-dts": "3.2.0"
  }
}
